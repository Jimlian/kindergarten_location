<h1> Add a kindergarten </h1>

<%= simple_form_for [:admin,@kindergarten] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :fee, :label => "学费" %>
<%= f.input :phone, :label => "联系电话" %>
<%= f.input :location, :label => "地点" %>

<%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
<% end %>
